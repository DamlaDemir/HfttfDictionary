
@{
    ViewBag.Title = "Login";
}
<br />
<br />
<div class="card card-login mx-auto mt-5">
    <div class="card-body">
        <form>
            <div class="form-group">
                <label for="exampleInputEmail1">Email adresi veya kullanıcı adı</label>
                <input type="email" class="form-control" id="kulAdi" aria-describedby="emailHelp" placeholder="Email giriniz">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Şifreniz</label>
                <input type="password" id="sifre" class="form-control" placeholder="Şifre">
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input">
                        Beni Hatırla
                    </label>
                </div>
            </div>
            <a id="giris" class="btn btn-s btn-block btn-success" style="width:200px; ">Giriş</a>
        </form>
        <div class="text-left" style="margin-top:4px;">
            <a class="d-block small mt-3">Kayıt Ol</a>
            <a class="d-block small">Şifremi Unuttum?</a>
        </div>
    </div>
</div>

@section scripts{
<script type="text/javascript">

    $(function () {

        $("#giris").click(function () {

            var kulAdi = $("#kulAdi").val();
            var sifre = $("#sifre").val();

                console.log(kulAdi + " " + sifre);
                var params = { kulAdi: kulAdi, sifre: sifre };
                $.ajax({
                    url: '/api/Values/Login',
                    type: 'POST',
                    data: params,
                    datatype: 'json',
                    success: function (kullanici) {
                        if (kullanici.girisYapildiMi)
                            location.href = "../Home/Index";
                        else
                            window.alert("Kullanıcı adı veya şifre yanlış!");
                    }
                });


        });
    });

</script>
}